<!-- booksByDate.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Books by Publication Date</title>
</head>
<body>
  <h2>Books with Publication Date <%= date %></h2>
  
  <% if (results.length > 0) { %>
    <ul>
      <% results.forEach(function(book) { %>
        <li>ID: <%= book.id %>, Name: <%= book.name %></li>
      <% }); %>
    </ul>
  <% } if (results.length === 0) { %>
    <p>No books found for the given date.</p>
  <% } %>
</body>
</html>
