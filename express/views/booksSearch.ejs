<!-- booksSearch.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Search Books</title>
</head>
<body>
  <h2>Search Results</h2>
  
  <% if (results.length > 0) { %>
    <ul>
      <% results.forEach(function(book) { %>
        <li>ID: <%= book.id %>, Name: <%= book.name %></li>
      <% }); %>
    </ul>
  <% } if (results.length === 0) { %>
    <p>No books found!</p>
  <% } %>
</body>
</html>
